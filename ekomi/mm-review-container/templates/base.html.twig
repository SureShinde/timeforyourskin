        css_app: "{{ getAppURI() }}assets/css/app.min.css",
        ajaxurl: "{{ getAppURI() }}ajax.php",
        i18n: {
            'config_deleted' : '{{ ___("Config.php deleted!") }}',
            'db_populated' : '{{ ___("Database populated successfully! You can now use the solution.") }}',
