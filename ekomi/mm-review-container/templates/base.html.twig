    {% block content %}{% endblock %}
</div>

<script type='text/javascript'>
    /* <![CDATA[ */
    var ekomi_app = {
        app_uri: "{{ getAppURI() }}",
        css_vendor: "{{ getAppURI() }}assets/css/vendor.min.css",
